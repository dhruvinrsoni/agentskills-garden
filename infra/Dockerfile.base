# Base container image for all AgentSkills
# This provides the common Python environment and FastAPI setup
FROM python:3.11-slim

LABEL maintainer="Dhruvin Rupesh Soni <dhruvinrsoni@users.noreply.github.com>"
LABEL org.opencontainers.image.source="https://github.com/dhruvinrsoni/agentskills-garden"
LABEL org.opencontainers.image.description="Base image for AgentSkills Garden"
LABEL org.opencontainers.image.licenses="Apache-2.0"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        git \
        curl \
        ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# Create non-root user for security
RUN useradd -m -u 1000 -s /bin/bash agentskill && \
    chown -R agentskill:agentskill /app

# Install Python dependencies
COPY requirements.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt && \
    rm /tmp/requirements.txt

# Switch to non-root user
USER agentskill

# Expose default port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Default command (override in skill-specific Dockerfile)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
